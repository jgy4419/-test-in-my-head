<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="#eeeeee"
    android:backgroundTint="#FAEEE0"
    android:orientation="vertical"
    tools:context=".Timeout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/timeoutText"
            android:layout_width="match_parent"
            android:layout_height="53sp"
            android:background="#E4C2BF"

            android:backgroundTint="#F9CF93"
            android:gravity="center"
            android:text="문제 틀렸어요!"
            android:textStyle="bold"
            android:textColor="#656060"
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/totalScore"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:text="지금까지 얻은 score 값 : 0"
            android:textColor="#000"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/secondText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:text="다시 풀어보세요"

            android:textColor="#000"
            android:textSize="15sp" />

        <!--        <TextView
                    android:id="@+id/second2Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:gravity="center"

                    android:textColor="#000"
                    android:textSize="15sp" />-->

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/RetryBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F9CF93"
            android:onClick="Retry"
            android:text="다시하기"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#656060"
            app:strokeColor="#635A5A"
            app:strokeWidth="2dp"
            android:visibility="visible"/>

        <Button
            android:id="@+id/BackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F9CF93"
            android:onClick="Back"
            android:text="메뉴가기"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#656060"
            app:strokeColor="#635A5A"
            app:strokeWidth="2dp"
            android:visibility="visible"/>
    </LinearLayout>

</LinearLayout>