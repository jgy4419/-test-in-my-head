<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/thema_Color_2"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".JoinMembershipActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="회원가입"
        android:textColor="@color/thema_Color_5"
        android:textSize="70sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="70sp" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/idEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="ID"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/idCheckBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:onClick="onClickCheckOverlap"
            android:text="ID 중복확인"
            android:backgroundTint="@color/thema_Color_4"
            android:textColor="@color/thema_Color_5"
            android:textSize="14sp"
            android:textStyle="bold"
            app:strokeColor="#635A5A"
            app:strokeWidth="2dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/pwEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/pwEditText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/pwCheckBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:onClick="onClickCheckPw"
            android:text="비밀번호 확인"
            android:backgroundTint="@color/thema_Color_4"
            android:textColor="@color/thema_Color_5"
            android:textSize="14sp"
            android:textStyle="bold"
            app:strokeColor="#635A5A"
            app:strokeWidth="2dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/nicknameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="NickName"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/nicknameCheckBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:onClick="onClickCheckOverlap"
            android:text="닉네임 중복확인"
            android:backgroundTint="@color/thema_Color_4"
            android:textColor="@color/thema_Color_5"
            android:textSize="14sp"
            android:textStyle="bold"
            app:strokeColor="#635A5A"
            app:strokeWidth="2dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/phoneNumberEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Phone Number"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/phoneNumCheckBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:onClick="onClickCheckPhoneNumber"
            android:text="전화번호 확인"
            android:backgroundTint="@color/thema_Color_4"
            android:textColor="@color/thema_Color_5"
            android:textSize="14sp"
            android:textStyle="bold"
            app:strokeColor="#635A5A"
            app:strokeWidth="2dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="E-Mail"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/emailCheckBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:onClick="onClickCheckEmail"
            android:text="이메일 확인"
            android:backgroundTint="@color/thema_Color_4"
            android:textColor="@color/thema_Color_5"
            android:textSize="14sp"
            android:textStyle="bold"
            app:strokeColor="#635A5A"
            app:strokeWidth="2dp" />
    </LinearLayout>

    <Button
        android:id="@+id/joinBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickJoin"
        android:text="회원가입"
        android:backgroundTint="@color/thema_Color_4"
        android:textColor="@color/thema_Color_5"
        android:textSize="14sp"
        android:textStyle="bold"
        app:strokeColor="#635A5A"
        app:strokeWidth="2dp"/>

</LinearLayout>