<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/thema_Color_2"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/loginTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="로그인"
        android:textColor="@color/thema_Color_5"
        android:textSize="80sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="80sp" />

    <EditText
        android:id="@+id/id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="ID"
        android:textSize="30sp"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="password"
        android:textSize="30sp"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickLoginBtn"
        android:text="login"
        android:backgroundTint="@color/thema_Color_4"
        android:textColor="@color/thema_Color_5"
        android:textSize="30sp"
        android:textStyle="bold"
        app:strokeColor="#635A5A"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/joinMembershipBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickJoinBtn"
        android:text="회원가입"
        android:backgroundTint="@color/thema_Color_4"
        android:textColor="@color/thema_Color_5"
        android:textSize="30sp"
        android:textStyle="bold"
        app:strokeColor="#635A5A"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/finishBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="finishBtn"
        android:text="로그인 없이 하기!"
        android:backgroundTint="@color/thema_Color_4"
        android:textColor="@color/thema_Color_5"
        android:textSize="30sp"
        android:textStyle="bold"
        app:strokeColor="#635A5A"
        app:strokeWidth="2dp" />
</LinearLayout>