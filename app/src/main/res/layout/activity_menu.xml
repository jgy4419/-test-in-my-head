<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAEEE0"
    android:onClick="onClickRankBtn"
    android:orientation="vertical"
    tools:context=".MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="158dp"
            android:layout_marginTop="60sp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="내 머리속의\n테스트"
            android:textColor="@color/thema_Color_5"
            android:textSize="50sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="241dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <Button
                android:id="@+id/guessnumber"
                android:layout_width="199dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="2sp"
                android:layout_marginRight="20sp"
                android:layout_weight="7"
                android:backgroundTint="@color/thema_Color_4"
                android:paddingTop="4dp"
                android:paddingEnd="10dp"
                android:text="같은 숫자 찾기"
                android:textColor="@color/thema_Color_5"
                android:textSize="20sp"
                android:textStyle="bold"
                app:strokeColor="#635A5A"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/geussnumberhelp"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_weight="3"
                android:backgroundTint="@color/thema_Color_4"
                android:onClick="onClickGuessHint"
                android:text="게임 도움말"
                android:textColor="@color/thema_Color_5"
                android:textSize="15sp"
                android:textStyle="bold"
                app:strokeColor="#635A5A"
                app:strokeWidth="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <Button
                android:id="@+id/nback"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="2sp"
                android:layout_marginRight="20sp"
                android:layout_weight="7"
                android:backgroundTint="@color/thema_Color_4"
                android:text="N Back Test"
                android:textColor="@color/thema_Color_5"
                android:textSize="20sp"
                android:textStyle="bold"
                app:strokeColor="#635A5A"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/nbackhelp"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_weight="3"
                android:backgroundTint="@color/thema_Color_4"
                android:onClick="onClickNBackHelp"
                android:text="게임 도움말"
                android:textColor="@color/thema_Color_5"
                android:textSize="15sp"
                android:textStyle="bold"
                app:strokeColor="#635A5A"
                app:strokeWidth="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <Button
                android:id="@+id/dwdm"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="2sp"
                android:layout_marginRight="20sp"
                android:layout_weight="7"
                android:backgroundTint="@color/thema_Color_4"
                android:onClick="onClickDwmtBtn"
                android:text="DWMT 트레이닝"
                android:textColor="@color/thema_Color_5"
                android:textSize="20sp"
                android:textStyle="bold"
                app:strokeColor="#635A5A"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/dwdmhelp"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_weight="3"
                android:backgroundTint="@color/thema_Color_4"
                android:onClick="onClickDWDMHelp"
                android:text="게임 도움말"
                android:textColor="@color/thema_Color_5"
                android:textSize="15sp"
                android:textStyle="bold"
                app:strokeColor="#635A5A"
                app:strokeWidth="2dp" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="1sp"
        android:layout_marginBottom="1sp"
        android:backgroundTint="@color/thema_Color_4"
        android:onClick="onClickRankBtn"
        android:text="랭크"
        android:textColor="@color/thema_Color_5"
        android:textSize="15sp"
        android:textStyle="bold"
        app:strokeColor="#635A5A"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/thema_Color_4"
        android:text="종료"
        android:textColor="@color/thema_Color_5"
        android:textSize="15sp"
        android:textStyle="bold"
        app:strokeColor="#635A5A"
        app:strokeWidth="2dp" />

</LinearLayout>